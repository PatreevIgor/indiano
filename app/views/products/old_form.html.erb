    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
   <%= f.fields_for :pictures do |p| %>
     <div class="field">
       <%= p.label :image %><br>
       <%= p.file_field :image, :multiple => true, name: "picture[image][]" %>
     </div>
   <% end %>
 
  <div class="actions">
    <%= f.submit 'Submit' %>
  </div>
<% end %>
